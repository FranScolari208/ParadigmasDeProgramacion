describe "Destinos importantes" {

	test "Los destinos mas importantes de barrilete cosmico son GarlicÂ´s Sea, Last Toninas" {
		assert.equals([ lastToninas, garlicsSea ], barrileteCosmico.obtenerDestinosMasImportantes())
	}

