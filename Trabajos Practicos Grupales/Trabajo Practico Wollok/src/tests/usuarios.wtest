import destinos.*
import viajes.*

describe "Tests de PHari" {	

	test "Ve que PHari pueda hacer un viaje a Garlic's Sea" {
		assert.that(pHari.puedeViajar(viajeAGarlicSea))
	}
	
	test "Ver que Pablo se siga a si mismo"{
		pHari.seguirUsuario(pHari)
		assert.that(pHari.usuariosQueSigue().contains(pHari))
	}
}

describe "Test de PHari y su viaje a Garlic Sea"{
	method initialize() {
		pHari.viajar(viajeAGarlicSea)
	}
	
	test "PHari tiene 100 kilometros" {
		assert.equals(100, pHari.kilometros())
	}

	test "Pablo se queda sin plata luego de viajar a Garlic's Sea" {
		assert.equals(0, pHari.dinero())
	}
	
	test "Ver que el viaje a garlicSea este en la lista de viajes de pablo"{
		assert.that(pHari.viajes().contains(viajeAGarlicSea))
	}
	
	test "Ver que luego de viajar a Garlic Sea Pablo la tenga como localidad de origen"{
		assert.equals(garlicsSea, pHari.localidadDeOrigen())
	}
}

