import main.mediosDeTransporte.*
describe "Test de Avion"{
	test "El costo por kilometro del avion"{
		assert.equals(8000, avion.costoPorKilometro())
	}	
	test "El precio del avion al hacer 500KM"{
		assert.equals(4000000, avion.precioDeTransporte(500))
	}
}

